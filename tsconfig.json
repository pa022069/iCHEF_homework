{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["lib", "es", "dist", "public"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "types",
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
        "dom",
        "es2015"
    ]
  }
}